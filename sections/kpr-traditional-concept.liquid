          <!-- Section 2: Vertical Showcase -->
          <div class="kpr-section kpr-section--2">
            <div class="kpr-section2__grid">
              
              <!-- Reviews Column (2fr) -->
              <div class="kpr-section2__reviews">
                <div class="kpr-reviews__container">
                  <scroll-seamless
                    class="kpr-reviews-scroll"
                    data-vertical
                    data-direction="up"
                    data-speed="{{ section.settings.reviews_speed | default: 40 }}"
                    role="marquee"
                    aria-label="scrolling reviews"
                  >
                    <div class="scroll-container">
                      <ul class="kpr-reviews-list scroll-list list-unstyled">
                        {% comment %} Reviews from metafields or schema {% endcomment %}
                        {% liquid
                          assign reviews_data = product.metafields.kpr.reviews_json
                          assign reviews = section.settings.reviews_json
                          if reviews == blank
                            assign reviews = '[]'
                          endif
                        %}
                        
                        {% if reviews != blank %}
                          {% for review in reviews limit: 10 %}
                            <li class="kpr-review-item scroll-item">
                              <div class="kpr-review-rating">
                                {% assign rating = review.rating | default: 5 %}
                                <div class="kpr-stars">
                                  {% for i in (1..5) %}
                                    <span class="kpr-star{% if i <= rating %} kpr-star--filled{% endif %}">★</span>
                                  {% endfor %}
                                </div>
                              </div>
                              <div class="kpr-review-content">
                                <p>{{ review.text | default: "Great product! Highly recommended." }}</p>
                              </div>
                              <div class="kpr-review-author">
                                <span class="kpr-author-name">{{ review.author | default: "Customer" }}</span>
                                {% if review.verified %}
                                  <span class="kpr-verified-badge">✓</span>
                                {% endif %}
                              </div>
                            </li>
                          {% endfor %}
                        {% else %}
                          {% comment %} Demo reviews {% endcomment %}
                          {% for i in (1..5) %}
                            <li class="kpr-review-item scroll-item">
                              <div class="kpr-review-rating">
                                <div class="kpr-stars">
                                  <span class="kpr-star kpr-star--filled">★</span>
                                  <span class="kpr-star kpr-star--filled">★</span>
                                  <span class="kpr-star kpr-star--filled">★</span>
                                  <span class="kpr-star kpr-star--filled">★</span>
                                  <span class="kpr-star kpr-star--filled">★</span>
                                </div>
                              </div>
                              <div class="kpr-review-content">
                                <p>{% case i %}{% when 1 %}Solid build and great features. Definitely a worthwhile upgrade.{% when 2 %}Impressive customization options; really adds to my gaming setup.{% when 3 %}Excellent quality and smooth performance. Love it!{% when 4 %}Perfect for my needs. Highly recommend this product.{% when 5 %}Outstanding value for money. Exceeded my expectations.{% endcase %}</p>
                              </div>
                              <div class="kpr-review-author">
                                <span class="kpr-author-name">{% case i %}{% when 1 %}Jordan L.{% when 2 %}Taylor R.{% when 3 %}Alex M.{% when 4 %}Sam K.{% when 5 %}Casey J.{% endcase %}</span>
                                <span class="kpr-verified-badge">✓</span>
                              </div>
                            </li>
                          {% endfor %}
                        {% endif %}
                      </ul>
                    </div>
                  </scroll-seamless>
                </div>
              </div>
              
              <!-- Product Slider Container (6fr) -->
              <div class="kpr-section2__slider-container">
                <!-- Swiper Container -->
                <div class="swiper kpr-section2-slider">
                  <div class="swiper-wrapper">
                    {% assign collection = collections[section.settings.section2_collection] %}
                    {% if collection.products.size > 0 %}
                      {% for product in collection.products limit: 6 %}
                        <div class="swiper-slide">
                          <div class="kpr-section2__slide-content">
                            
                            <!-- Thumbnails Column -->
                            <div class="kpr-section2__thumbnails">
                              <div class="kpr-thumbnails__container">
                                {% if product.metafields.kpr.product_thumbnail_vertical != blank
                                  and product.metafields.kpr.product_thumbnail_vertical.type == 'file_reference'
                                %}
                                  {% assign thumbnail_media = product.metafields.kpr.product_thumbnail_vertical %}
                                  {% assign file_url = thumbnail_media | file_url %}
                                  
                                  {% if file_url contains '.mp4'
                                    or file_url contains '.webm'
                                    or file_url contains '.mov'
                                  %}
                                    <!-- Video Thumbnail -->
                                    <video
                                      class="kpr-thumbnail__video"
                                      playsinline
                                      muted
                                      preload="none"
                                      width="200"
                                      height="250"
                                    >
                                      <source src="{{ file_url }}" type="video/mp4">
                                    </video>
                                  {% else %}
                                    <!-- Image Thumbnail -->
                                    <img
                                      src="{{ thumbnail_media | img_url: '200x250' }}"
                                      alt="{{ product.title | escape }}"
                                      loading="lazy"
                                      width="200"
                                      height="250"
                                      class="kpr-thumbnail__image"
                                    >
                                  {% endif %}
                                {% else %}
                                  <!-- Fallback Thumbnail -->
                                  <div class="kpr-thumbnail__placeholder">
                                    <span>{{ product.title | default: 'Product Image' }}</span>
                                  </div>
                                {% endif %}
                              </div>
                            </div>
                            
                            <!-- Product Column -->
                            <div class="kpr-section2__product">
                              <div class="kpr-product2__container">
                                <!-- Product Image -->
                                <div class="kpr-product2__image">
                                  {% if product.metafields.kpr.product_image_vertical != blank
                                    and product.metafields.kpr.product_image_vertical.type == 'file_reference'
                                  %}
                                    {% assign vertical_media = product.metafields.kpr.product_image_vertical %}
                                    {% assign file_url = vertical_media | file_url %}
                                    
                                    {% if file_url contains '.mp4'
                                      or file_url contains '.webm'
                                      or file_url contains '.mov'
                                    %}
