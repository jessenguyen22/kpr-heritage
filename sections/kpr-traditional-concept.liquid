                                      <video
                                        class="kpr-product2__video"
                                        playsinline
                                        autoplay
                                        muted
                                        loop
                                        preload="none"
                                        width="150"
                                        height="1500"
                                      >
                                        <source src="{{ file_url }}" type="video/mp4">
                                      </video>
                                    {% else %}
                                      <!-- Image Product -->
                                      <img
                                        src="{{ vertical_media | img_url: '300x3000' }}"
                                        alt="{{ product.title | escape }}"
                                        loading="lazy"
                                        width="200"
                                        height="2000"
                                        class="kpr-product2__image"
                                        style="max-width:220px; width:100%; height:fit-content; object-fit:contain;"
                                      >
                                    {% endif %}
                                  {% else %}
                                    <!-- Fallback Product Image -->
                                    <div class="kpr-product2__placeholder">
                                      <span>{{ product.title | default: 'Product Image' }}</span>
                                    </div>
                                  {% endif %}
                                </div>
                                
                                <!-- Product Info -->
                                <div class="kpr-product2__info">
                                  <h3 class="kpr-product2__title">{{ product.title }}</h3>
                                  
                                  <!-- Price -->
                                  <div class="kpr-product2__price">
                                    {% if product.compare_at_price > product.price %}
                                      <span class="kpr-price--sale">{{ product.price | money }}</span>
                                      <span class="kpr-price--compare">{{ product.compare_at_price | money }}</span>
                                    {% else %}
                                      <span class="kpr-price--regular">{{ product.price | money }}</span>
                                    {% endif %}
                                  </div>
                                  
                                  <!-- Add to Cart Button -->
                                  <div class="kpr-product2__actions">
