                              <div class="kpr-product2__container">
                                <div class="kpr-product2__image">
                                  <div class="kpr-product2__placeholder">
                                    <span>Product {{ i }}</span>
                                  </div>
                                </div>
                                <div class="kpr-product2__info">
                                  <h3 class="kpr-product2__title">KYPER POOL CUE {{ i }}</h3>
                                  <div class="kpr-product2__price">
                                    <span class="kpr-price--regular">${{ 200 | times: i }}</span>
                                  </div>
