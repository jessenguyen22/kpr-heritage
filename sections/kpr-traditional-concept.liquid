                                    <button class="kpr-product2__btn" disabled>
                                      Add to Cart
                                    </button>
                                  </div>
                                </div>
                              </div>
                            </div>
                            
                            <!-- Features Column -->
                            <div class="kpr-section2__features">
                              <div class="kpr-features__container">
                                <h4 class="kpr-features__title">Product Features</h4>
                                <ul class="kpr-features__list">
                                  <li class="kpr-feature__item">
                                    <span class="kpr-feature__icon">✓</span>
                                    <span class="kpr-feature__text">Premium materials for durability</span>
                                  </li>
                                  <li class="kpr-feature__item">
                                    <span class="kpr-feature__icon">✓</span>
                                    <span class="kpr-feature__text">Precision engineering for accuracy</span>
                                  </li>
